{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "module": "es6",
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "."
  },
  "include": [
    "app.js",
    "../typings/**/*"
  ],
  "exclude": [
    "dist"
  ]
}