{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}